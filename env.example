# Environment Configuration Example
# Copy this file to .env and fill in your values

# ================================
# DATABASE
# ================================
# For SQLite (Development Only)
# DATABASE_URL="file:./dev.db"

# For PostgreSQL (Required for Production)
# With SSL (DigitalOcean, most cloud providers):
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Alternative SSL format (if above doesn't work):
# DATABASE_URL="postgresql://username:password@host:port/database?ssl=true&sslmode=require"

# Using DigitalOcean database component reference:
# DATABASE_URL="${db.DATABASE_URL}"

# ================================
# ADMIN AUTHENTICATION
# ================================
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your_secure_password_here"

# ================================
# SITE CONFIGURATION
# ================================
# Your site's public URL
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# ================================
# NODE ENVIRONMENT
# ================================
NODE_ENV="production"

# ================================
# OPTIONAL: PORT CONFIGURATION
# ================================
PORT=3000

